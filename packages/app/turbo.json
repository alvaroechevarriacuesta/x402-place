{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "POSTGRES_*",
        "REDIS_URL",
        "BLOB_READ_WRITE_TOKEN",
        "NODE_ENV",
        "NEXT_RUNTIME"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "POSTGRES_*",
        "REDIS_URL",
        "BLOB_READ_WRITE_TOKEN",
        "NODE_ENV",
        "NEXT_RUNTIME",
        "NEXT_PUBLIC_*"
      ]
    },
    "lint": {
      "env": ["NODE_ENV", "NEXT_RUNTIME"]
    }
  }
}

