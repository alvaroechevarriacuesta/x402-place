
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Pixel {
  x     Int
  y     Int
  color String

  @@id([x, y])
}

model History {
  id        BigInt   @id @default(autoincrement())
  timestamp DateTime @default(now())
  x         Int
  y         Int
  color     String
}

model Snapshot {
  id        BigInt   @id @default(autoincrement())
  timestamp DateTime @default(now())
  blobUrl   String
  metadata  String?  // Optional JSON metadata (dimensions, pixel count, etc.)

  @@index([timestamp])
}
