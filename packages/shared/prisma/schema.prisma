
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Pixel {
  x     Int
  y     Int
  color String

  @@id([x, y])
}

model History {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  x         Int
  y         Int
  color     String

  @@index([timestamp(sort: Desc)])
}

model Snapshot {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  blobUrl   String

  @@index([timestamp(sort: Desc)])
}
